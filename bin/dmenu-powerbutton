#!/bin/sh
if [ -f $HOME/.dmenurc ]; then
	. $HOME/.dmenurc
else
	DMENU='dmenu -i -fn -*-termsyn-medium-*-*-*-13-*-*-*-*-*-*-* -nb #020202 -nf #808080 -sb #020202 -sf #B3B3B3'
fi
cmd=$(echo -e "shutdown\nreboot\nlogout" | $DMENU)
case $cmd in
	shutdown)
		sudo shutdown -h now
		;;
	reboot)
		sudo shutdown -r now
		;;
	logout)
		sudo killall X
		;;
esac
