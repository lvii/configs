[general]
accounts = lavabit, gmail

[Account gmail]
localrepository = gmail-local
remoterepository = gmail-remote

[Repository gmail-local]
type = Maildir
localfolders = ~/mail/gmail

[Repository gmail-remote]
type = Gmail
remoteuser = ok100.ok100.ok100@gmail.com
cert_fingerprint = f3043dd689a2e7dddfbef82703a6c65ea9b634c1
realdelete = no
nametrans = lambda folder: re.sub('^inbox$', 'INBOX',
		                   re.sub(r'.*/(.*)$', r'\1', folder).lower())
folderfilter = lambda foldername: foldername not in [ 'sent mail', 'drafts', 'spam']

[Account lavabit]
localrepository = lavabit-local
remoterepository = lavabit-remote

[Repository lavabit-local]
type = Maildir
localfolders = ~/mail/lavabit

[Repository lavabit-remote]
type = IMAP
remotehost = lavabit.com
remoteuser = ok100@lavabit.com
realdelete = no

[mbnames]
enabled = yes
filename = ~/.mutt/mailboxes
header = "mailboxes "
peritem = "+%(accountname)s/%(foldername)s"
sep = " "
footer = "\n"

