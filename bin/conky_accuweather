#!/bin/sh

test_image () {
	case $1 in
	 1|01)
	   echo a
	 ;;
	 2|02)
	   echo b
	 ;;
	 3|03)
	   echo c
	 ;;
     4|04)
	   echo c
	 ;;
     5|05)
	   echo c
	 ;;
	 6|06)
	   echo d
	 ;;
	 7|07)
	   echo e
	 ;;
     8|08)
	   echo e
	 ;;
	 11)
	   echo 0
	 ;;
	 12)
	   echo h
	 ;;
	 13|14)
	   echo g
	 ;;
	 15)
	   echo l
	 ;;
	 16|17)
	   echo k
	 ;;
	 18|26)
	   echo i
	 ;;
	 19)
	   echo p
	 ;;
	 20|21|23)
	   echo o
	 ;;
	 22)
	   echo r
	 ;;
	 24|31)
	   echo E
	 ;;
	 25)
	   echo u
	 ;;
	 29)
	   echo v
	 ;;
     30)
	   echo 5
	 ;;
	 32)
	   echo 6
	 ;;
	 33)
	   echo A
	 ;;
	 34|36|37)
	   echo B
	 ;;
	 35|38)
	   echo C
	 ;;
	 39|40)
	   echo G
	 ;;
	 41|42)
	   echo K
	 ;;
	 43|44)
	   echo O
	 ;;
	esac
} 

address="http://rss.accuweather.com/rss/liveweather_rss.asp?metric=1&locCode=EUR|SK|LO000|BZOVIK"

rm ~/.conky/weather_raw

wget -O ~/.conky/weather_raw $address 2> /dev/null

if [ -s ~/.conky/weather_raw ]; then
	temp=`grep "Currently:" ~/.conky/weather_raw | cut -d ":" -f3 | cut -d "<" -f1 | cut -d "C" -f1`Â°C
	weather=$(test_image `grep -A5 "Currently:" ~/.conky/weather_raw | grep gif | cut -d "/" -f8 | cut -d "_" -f1`)
	
	echo '${font Conkyweather:size=50}'$weather'${voffset -25}${font}'$temp
fi
