#!/bin/sh
if [ -f $HOME/.dmenurc ]; then
	. $HOME/.dmenurc
else
	DMENU='dmenu -i -fn -*-tamsyn-medium-*-*-*-14-*-*-*-*-*-*-* -nb #000c1a -nf #77858c -sb #000c1a -sf #c0c0c0'
fi
cmd=$(echo -e "shutdown\nreboot\nlogout" | $DMENU)
case $cmd in
	shutdown)
		sudo shutdown -h now
		;;
	reboot)
		sudo shutdown -r now
		;;
	logout)
		sudo killall X
		;;
esac
